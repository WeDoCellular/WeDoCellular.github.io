<script>
    $(function(){
        $('#article-comment-form').validate({
            messages: {
                contact_name: {
                    required: 'Please enter your name',
                    minlength: 'Please enter a valid name',
                },
                contact_email: {
                    required: 'Please enter your email address',
                    minlength: 'Please enter a valid email address',
                    email: 'Please enter a valid email address',
                },
                content: {
                    required: 'Please enter your comment',
                    minlength: 'Please enter at least 10 chars',
                },
                location: {
                    required: 'Please enter your location'
                },
                nickname: {
                    required: 'Please enter your nickname'
                },
            },
            submitHandler: function(form) {
                $(form).find('button[type="submit"]').prop('disabled', true);

                if ( $('#article_comment_id').val().length > 0 ) {
                    RC.Server.Blog.Article.Comment.update($('#article_comment_id').val(), RC.Form.serialize($(form)),{
                        failure:function(context,msg,xml,jqXHR) {
                            $(form).find('button[type="submit"]').prop('disabled', false);
                            
                            $('#message-panel-comment-title').html('Edit Post Failed!');
                            $('#message-panel-comment-body').html(msg);
                            $('#message-panel-comment').show();
                            $('#article-comment-popup').hide();
                        },
                        success:function(c,h,x){
                            window.location.reload(); 
                            $('#article-comment-form').find('button[type="submit"]').prop('disabled', false);
                           
                            $('#message-panel-comment-title').html('Comment Modified Successfully!');
                            $('#message-panel-comment-body').html('Your comment will be verified and subject to meeting our criteria, it will be published on the website shortly.');
                            $('#message-panel-comment').show();
                            $('#article-comment-popup').hide();
                        }
                    });
                } else {

                    RC.Server.Blog.Article.Comment.post(1, $('#reply-to-comment-id').val(), RC.Form.serialize($(form)),{
                        failure:function(context,msg,xml,jqXHR) {
                            $(form).find('button[type="submit"]').prop('disabled', false);
                            
                            $('#message-panel-comment-title').html('Comment Post Failed!');
                            $('#message-panel-comment-body').html(msg);
                            $('#message-panel-comment').show();
                            $('#article-comment-popup').hide();
                        },
                        success:function(c,h,x){
                             window.location.reload(); 
                            $('#article-comment-form #content').val('');
                            $('#article-comment-form').find('button[type="submit"]').prop('disabled', false);

                            $('#message-panel-comment-title').html('Comment Posted Successfully!');
                            $('#message-panel-comment-body').html('Your comment will be verified and subject to meeting our criteria, it will be published on the website shortly.');
                            $('#message-panel-comment').show();
                            $('#article-comment-popup').hide();
                        }
                    });
                }
            }
        });
    });
    
    
    $(".post-comment-btn").click(function() { 
        resetCommentForm();
    
        $('#article_comment_id').val(''); 
        $('#reply-to-comment-id').val(''); 
        $('#article-comment-popup').show();
    });
    
    function EditComment(commentId) {
        var commentButton = $('#edit-subcomment-' + commentId);
        $('#contact_name').val(commentButton.data('contactName'));
       $('#contact_email').val(commentButton.data('contactEmail'));
       $('#nickname').val(commentButton.data('nickname'));
       $('#location').val(commentButton.data('location'));
       $('#comment-content').val($('#edit-data-comment-' + commentButton.data('id')).html().replace('<br>', ''));
    
        $('#article_comment_id').val(commentButton.data('id')); 
        $('#reply-to-comment-id').val(''); 
        $('#article-comment-popup').show();
    }
    
    function ReplyComment(commentId) {
        resetCommentForm();
    
        $('#article_comment_id').val(''); 
        $('#reply-to-comment-id').val(commentId); 
        $('#article-comment-popup').show();
    }
    
    function resetCommentForm() {
       $('#contact_name').val('');
       $('#contact_email').val('');
       $('#nickname').val('');
       $('#location').val('');
       $('#comment-content').val('');
    }
</script>
      		
      		
